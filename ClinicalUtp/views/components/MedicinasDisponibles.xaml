<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicalUtp.views.components.MedicinasDisponibles"
             BackgroundColor="Transparent">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="20">

            <Frame Padding="10"
                      BackgroundColor="#024F55"
                   HeightRequest="60"
                   CornerRadius="20"
                   BorderColor="#024F55"
                   HasShadow="True"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="Center">
                <HorizontalStackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                    <!-- Imagen a la izquierda -->
                    <Image Source="medicine.png" 
                           WidthRequest="40" 
                           HeightRequest="40" 
                           Aspect="AspectFit"
                           VerticalOptions="Center" />

                    <!-- TÃ­tulo en el centro -->
                    <Label Text="Medicinas " 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           HorizontalOptions="CenterAndExpand"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Frame>

            <FlexLayout Wrap="Wrap" 
                        AlignItems="Start"
                        JustifyContent="Start"
                        Direction="Row"
                        BindableLayout.ItemsSource="{Binding Medicines}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <!-- Frame para cada medicina -->
                        <Frame Padding="10" 
                               CornerRadius="10"
                               HasShadow="True"
                               HeightRequest="150" 
                               BackgroundColor="#D5F2F8"
                               BorderColor="#024F55"
                               WidthRequest="150"
                               Margin="5">
                            <VerticalStackLayout Spacing="10" 
                                                 HorizontalOptions="Fill" 
                                                 VerticalOptions="Center">
                                <!-- Imagen del medicamento -->
                                <Image Source="medicines.png" 
                                       WidthRequest="100" 
                                       HeightRequest="50" 
                                       Aspect="AspectFit" 
                                       HorizontalOptions="Center" />
                                <!-- Nombre de la medicina -->
                                <Label Text="{Binding Name}" 
                                       FontSize="14" 
                                       TextColor="#024F55" 
                                       HorizontalOptions="Center" />
                                <!-- Frame para la cantidad -->
                                <Frame Padding="10" 
                                       BackgroundColor="#024F55" 
                                       CornerRadius="10"
                                       HasShadow="True"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center">
                                    <!-- Cantidad de la medicina -->
                                    <Label Text="{Binding Quantity}" 
                                           FontSize="12" 
                                           TextColor="White" 
                                           HorizontalOptions="Center" />
                                </Frame>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentView>
